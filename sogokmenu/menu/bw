#!/bin/bash
# https://t.me/bio_hazard89

MYIP=$(wget -qO- ipinfo.io/ip);
echo "Checking VPS"
# Color
RED='\033[0;31m'
NC='\033[0m'
GREEN='\033[0;32m'
ORANGE='\033[0;33m'
BLUE='\033[0;34m'
YELL='\033[0;33m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
LIGHT='\033[0;37m'
BGWHITE='\e[0;100;37m'

clear 
echo -e ""
echo -e "\e[33m──────────────────────────────────────────\033[0m"
echo -e "\E[40;1;37m       MENU MONITOR BANDWITH SERVER       \E[0m"
